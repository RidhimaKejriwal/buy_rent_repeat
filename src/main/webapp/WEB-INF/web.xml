<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>com.learn.buyrent.servlets.VerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUserCode</servlet-name>
        <servlet-class>com.learn.buyrent.servlets.VerifyUserCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifySellerCode</servlet-name>
        <servlet-class>com.learn.buyrent.servlets.VerifySellerCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/VerifyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUserCode</servlet-name>
        <url-pattern>/VerifyUserCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifySellerCode</servlet-name>
        <url-pattern>/VerifySellerCode</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
