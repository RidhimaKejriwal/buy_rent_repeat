    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>com.learn.buyrent.servlets.VerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUserCode</servlet-name>
